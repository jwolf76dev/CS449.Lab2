<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="true"
    android:background="#000000">

    <TextView
        android:id="@+id/strike_label"
        android:text="@string/text_label_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/strike_count_value"
        android:text="@string/count_value_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/strike_label"
        android:layout_toEndOf="@id/strike_label"
        android:layout_marginStart="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/ball_label"
        android:text="@string/text_label_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/strike_count_value"
        android:layout_toEndOf="@+id/strike_count_value"
        android:layout_marginStart="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/ball_count_value"
        android:text="@string/count_value_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ball_label"
        android:layout_toEndOf="@+id/ball_label"
        android:layout_marginStart="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/strike_button"
        android:text="@string/button_label_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ball_button"
        android:text="@string/button_label_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/strike_button"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/strike_button"
        android:layout_alignEnd="@+id/strike_button"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalOuts_label"
        android:text="@string/text_label_totalOuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/ball_button"
        android:layout_toStartOf="@+id/strike_count_value"
        android:layout_marginTop="37dp"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/totalOuts_value"
        android:text="@string/count_value_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@id/totalOuts_label"
        android:layout_toEndOf="@id/totalOuts_label"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="#ffffff" />
</RelativeLayout>
